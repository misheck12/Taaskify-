<div class="container">
  <h1>Edit Project</h1>

  <%= form_with(model: @project, url: customer_project_path(@project), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(["Pending", "In Progress", "Completed"]), {}, class: "form-control" %>
    </div>

    <%= form.submit "Update", class: "btn btn-primary" %>
  <% end %>
</div>
