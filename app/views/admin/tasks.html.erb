<h1>Admin#tasks</h1>
<p>Find me in app/views/admin/tasks.html.erb</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td>
          <%= link_to 'Edit', admin_manage_path(type: 'task', id: task.id) %>
          <%= link_to 'Delete', admin_manage_path(type: 'task', id: task.id), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
